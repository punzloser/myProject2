@using ViewModel.Catalog.Users
@model RegisterRequest
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section style="background-color: #eee;">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center text-muted h3 fw-bold mb-1 mx-1 mx-md-4 mt-4">Tạo tài khoản</p>

                                <form class="mx-1 mx-md-4" method="post" action="">

                                    <div asp-validation-summary="ModelOnly"></div>

                                    <div class="form-floating mb-1">
                                        <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Nhập tài khoản">
                                        <label asp-for="@Model.UserName"></label>
                                        <span asp-validation-for="@Model.UserName" class="alert-danger"></span>
                                    </div>

                                    <div class="input-group mb-1">
                                        <input type="text" class="form-control" asp-for="@Model.FirstName" placeholder="Nhập họ">
                                        <input type="text" class="form-control" asp-for="@Model.LastName" placeholder="Nhập tên">
                                    </div>
                                    <span asp-validation-for="@Model.FirstName" class="alert-danger"></span>
                                    <span asp-validation-for="@Model.LastName" class="alert-danger"></span>

                                    <div class="form-floating mb-1">
                                        <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Nhập Email">
                                        <label asp-for="@Model.Email"></label>
                                        <span asp-validation-for="@Model.Email" class="alert-danger"></span>
                                    </div>

                                    <div class="form-floating mb-1">
                                        <input type="date" class="form-control" asp-for="@Model.Dob" placeholder="Nhập ngày sinh">
                                        <label asp-for="@Model.Dob"></label>
                                        <span asp-validation-for="@Model.Dob" class="alert-danger"></span>
                                    </div>

                                    <div class="form-floating mb-1">
                                        <input type="password" class="form-control" asp-for="@Model.Pass" placeholder="Nhập mật khẩu">
                                        <label asp-for="@Model.Pass"></label>
                                        <span asp-validation-for="@Model.Pass" class="alert-danger"></span>
                                    </div>

                                    <div class="form-floating mb-1">
                                        <input type="password" class="form-control" asp-for="@Model.ConfirmPass" placeholder="Nhập lại mật khẩu">
                                        <label asp-for="@Model.ConfirmPass"></label>
                                        <span asp-validation-for="@Model.ConfirmPass" class="alert-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-lg-4 mt-3">
                                        <button type="submit" class="btn btn-primary btn-lg">Đăng kí</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="/img/draw1.png" class="img-fluid" alt="">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

