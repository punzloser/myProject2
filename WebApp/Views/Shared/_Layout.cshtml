@{
    var culture = CultureInfo.CurrentCulture.Name;
    var isAuthenticated = User.Identity.IsAuthenticated;
}
@inject Microsoft.Extensions.Configuration.IConfiguration _config;

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400;500;700&display=swap" rel="stylesheet">
    <!-- My css -->
    <link rel="stylesheet" href="/css/style.css" />
    <!-- CDN css -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script> -->
    <link rel="stylesheet" href="/bootstrap-5.0.0-beta3-dist/css/bootstrap.css">

    <title>@ViewData["Title"] - Web</title>
</head>
<body>
    <input type="hidden" id="getCulture" value="@culture" />
    <input type="hidden" id="getBaseAddress" value="@_config["BaseApi"]" />
    <!-- nav1 -->
    <nav id="s1" class="navbar navbar-expand-md navbar-light bg-warning fixed-top rounded-bottom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                <img src="/img/logo-onlinepngtools.png" height="40" width="80" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="sub-menu-1 m-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                                <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
                            </svg>
                            <a class="nav-me active" aria-current="page" asp-action="Index" asp-controller="Home"
                               asp-route-culture="@culture" localize-content>
                                Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                                <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z" />
                            </svg>
                            <a class="nav-me" asp-action="Index" asp-controller="Contact"
                               asp-route-culture="@culture" localize-content>
                                Liên hệ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-me" asp-action="Index" asp-controller="Product"
                               asp-route-culture="@culture" localize-content>
                                Sản phẩm
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-me dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <localize>Chi tiết</localize>
                            </a>
                            <ul class="dropdown-menu aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" asp-action="Index" asp-controller="Product"><localize>Sản phẩm</localize></a>
                                    <div class="sub-menu-2">
                                        <ul class="dropdown-menu aria-labelledby="navbarDropdown">
                                            <li><a class="dropdown-item" href="product.html">Laptop</a></li>
                                            <li><a class="dropdown-item" href="mobile.html">Mobile</a></li>
                                            <li><a class="dropdown-item" href="#">Other</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="About"><localize>Về tôi</localize></a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Contact"><localize>Liên hệ</localize></a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-me" asp-controller="Cart" asp-action="Index">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
                                </svg>
                                <span class="badge rounded-pill bg-danger" id="countCart"></span>
                            </a>
                        </li>
                        <li class="dropdow">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <localize>Chọn ngôn ngữ</localize>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" href="/vi/Home/SetCultureCookie?cltr=en&amp;returnUrl=/vi"><localize>Tiếng Việt</localize></a></li>
                                <li><a class="dropdown-item" href="/vi/Home/SetCultureCookie?cltr=en&amp;returnUrl=/en"><localize>Tiếng Anh</localize></a></li>
                            </ul>
                        </li>
                        @* Not work vì đang sử dụng bootstrap 5 - đã hạn chế Jquery, tác giả dùng đồ cổ ko chạy được *@
                        @*<language-nav language-label="NativeName" cookie-handler-url="@(Url.Action("SetCultureCookie", "Home", new { area= "", cltr="{0}", returnUrl="{1}" }))"></language-nav>*@

                    </ul>
                </div>

                <form class="d-flex flex-row-reverse">
                    <input class="form-control ms-2" type="search" placeholder="" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit"><localize>Tìm</localize></button>
                </form>

                @if (isAuthenticated)
                {
                    <form asp-controller="User" asp-action="Logout" method="post">
                        <span class="text-muted mx-1" style="font-size:11px;">Xin chào ! @User.Identity.Name</span>
                        <button type="submit" class="btn btn-info nav-me">Đăng xuất</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-info nav-me" asp-controller="User" asp-action="Login">Đăng nhập</a>
                }

            </div>
        </div>
    </nav>

    @RenderBody()

    <!-- footer -->
    <div class="navbar navbar-expand-md navbar-light bg-warning rounded-top">
        <div class="col-md-7">
            <ul class="nav">
                <li class="nav-item">
                    <a href="#" class="nav-link"><localize>Sản phẩm khác</localize></a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Blog</a>
                </li>
                <li class="nav-item">

                    <div class="btn-group dropup" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <localize>Mạng xã hội</localize>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <li><a class="dropdown-item" href="https://www.facebook.com/punzloser/">Facebook</a></li>
                            <li><a class="dropdown-item" href="#">Youtube</a></li>
                        </ul>
                    </div>

                </li>
            </ul>
        </div>
        <div class="copy col-md-5 text-md-end">
            <small>&copy; 2021 Thanh Nguyen</small>
        </div>
    </div>

    <!-- CDN JavaScript and dependencies -->
    @{
        string popper = "@popperjs";
    }
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popper/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js" integrity="sha384-lpyLfhYuitXl2zRZ5Bn2fqnhNAKOAaM/0Kr9laMspuaMiZfGmfwRNFh8HlMy49eQ" crossorigin="anonymous"></script>

    <!-- My js -->
    <script src="/js/index.js"></script>
    @RenderSection("test", false)
</body>
</html>