@model ProductPaging
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_NavMini")

<div class="laptop">

    <div id="demo" class="card-header text-muted float-start w-75 rounded-3 border">
        <h4 class="card-group">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-laptop" viewBox="0 0 16 16">
                <path d="M13.5 3a.5.5 0 0 1 .5.5V11H2V3.5a.5.5 0 0 1 .5-.5h11zm-11-1A1.5 1.5 0 0 0 1 3.5V12h14V3.5A1.5 1.5 0 0 0 13.5 2h-11zM0 12.5h16a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 12.5z" />
            </svg>
            @Model.Category.Name

            <span class="ms-auto">@await Component.InvokeAsync("Paging", Model.Products)</span>
        </h4>
    </div>

    <select class="form-select form-select-lg mb-3 w-25" aria-label=".form-select-lg example">
        <option selected>Sắp xếp theo</option>
        <option value="1">Giá giảm</option>
        <option value="2">Giá tăng</option>
        <option value="3">Bán chạy</option>
    </select>

    <div class="clearfix"></div>


    <div class="row row-cols-sm-1 row-cols-md-4 row-cols-lg-5">
        @{
            foreach (var item in Model.Products.Items)
            {
                <div class="col">
                    <div class="card">
                        <img src="@_config["BaseApi"]@item.Thumnail" alt="@item.Name">
                        <div class="card-body">
                            <h6 class="card-title"></h6>
                            <p class="price">@item.Price.ToString("N0") VNĐ</p>
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning w-100">Chi tiết</a>
                        </div>
                        <button data-id="@item.Id" class="btn-show btn-cart btn btn-sm btn-secondary">Thêm</button>
                    </div>
                </div>
            }
        }

    </div>
</div>