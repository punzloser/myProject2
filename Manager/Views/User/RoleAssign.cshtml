@model ViewModel.Catalog.Roles.RoleEditModel

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mb-4">
    <div class="card-header">
        <a class="btn btn-success" asp-action="Index" asp-controller="User">Về danh sách</a>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                @Html.CheckBoxFor(m => Model.Roles[i].Checked)
                @Model.Roles[i].Name
                @Html.HiddenFor(m => Model.Roles[i].Id)
                @Html.HiddenFor(m => Model.Roles[i].Name)
            }
            <div class="form-group">
                <input type="submit" value="Lưu lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
